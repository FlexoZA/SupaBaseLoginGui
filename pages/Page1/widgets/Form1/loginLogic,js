// Login logic handler
const loginHandler = {
  // Validate form inputs
  validateInputs: (email, password) => {
    if (!email || !password) {
      return {
        isValid: false,
        message: 'Please fill in all fields'
      };
    }
    return { isValid: true };
  },

  // Handle login process
  handleLogin: async (email, password) => {
    try {
      // Show loading state
      Button1.setLoading(true);
      
      // Validate inputs
      const validation = loginHandler.validateInputs(email, password);
      if (!validation.isValid) {
        showAlert(validation.message, 'error');
        return;
      }
      
      // Make login request to n8n webhook
      const response = await fetch('https://automation.cwe.cloud/webhook/studio-login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email, password })
      });
      
      const data = await response.json();
      
      if (data.success) {
        // Store session info
        storeValue('sessionId', data.sessionId);
        storeValue('user', data.user);
        
        // Redirect to Supabase Studio
        window.location.href = 'https://acmdb.cwe.cloud/';
      } else {
        showAlert(data.error || 'Login failed', 'error');
      }
    } catch (error) {
      showAlert('An error occurred during login', 'error');
      console.error('Login error:', error);
    } finally {
      Button1.setLoading(false);
    }
  }
}; 